@model List<BestOrder>

<h4  class="mt-3">Najdroższe zamówienia</h4>
    <table class="table">
        <thead>
            <tr>
                <th>OrderId</th>
                <th>Imię i nazwisko Klienta</th>
                <th>Cena całkowita</th>
                <th>Zamówione produkty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.OrderId</td>
                    <td>@p.FirstName @p.LastName</td>
                    <td>@p.TotalPrice</td>
                    <td>
                        @foreach (var x in p.Products)
                        {
                            <p>@x.Name</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>